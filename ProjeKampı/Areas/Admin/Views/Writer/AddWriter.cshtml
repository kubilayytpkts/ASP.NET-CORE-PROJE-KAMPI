@using ProjeKampı
@model ProjeKampı.Areas.Admin.Models.WriterModelForImage

@{
    ViewData["Title"] = "AddWriter";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

@using (Html.BeginForm("AddWriter","Writer",FormMethod.Post,new {enctype="multipart/form-data"}))
{
    <div>
        @Html.Label("İsim")
        @Html.TextBoxFor(x=>x.WriterName,new {@class="form-control"})
        <br/>
        @Html.Label("Soyisim")
        @Html.TextBoxFor(x=>x.WriterAbout,new {@class="form-control"})
        <br />
        @Html.Label("Resim")
        <input type="file" name="WriterImage">
        <br />
        <br/>
        @Html.Label("Mail")
        @Html.TextBoxFor(x=>x.WriterMail,new {@class="form-control"})
        <br/>
        @Html.Label("Şifre")
        @Html.PasswordFor(x=>x.WriterPassword,new {@class="form-control"})
        <br/>
        <button type="submit" class="btn btn-primary contact_grids_info">Gönder</button>

    </div>
}

