@model Entity.Concrete.Writer

@{
    ViewData["Title"] = "EditProfile";
    Layout = "~/Views/Shared/Writer_Layout.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="\lib\jquery\dist\jquery.js"></script>

@using (Html.BeginForm("EditProfile", "Writer", FormMethod.Post, new { id = "editProfileForm" }))
{
    <div class="card-body">
        <h4 class="card-title">Basic form elements</h4>
        <p class="card-description"> Basic form elements </p>

        @Html.HiddenFor(x => x.WriterID, new { @class = "form-control" })

        <div class="form-group">
            <label for="exampleInputName1">İsim</label>
            @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.WriterName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="exampleInputEmail3">Email</label>
            @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.WriterMail, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="exampleInputPassword4">Yeni Şifre</label>
            @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.WriterPassword, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>Dosya Yükle</label>
            <input type="file" name="img[]" class="file-upload-default">
            <div class="input-group col-xs-12">
                <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                <span class="input-group-append">
                    <button class="file-upload-browse btn btn-gradient-danger" type="button">Yükle</button>
                </span>
            </div>
        </div>

        <div class="form-group">
            <label for="exampleTextarea1">Hakkında</label>
            @Html.TextAreaFor(x => x.WriterAbout, 10, 3, new { @class = "form-control" })
        </div>

        <button type="button" class="btn btn-gradient-primary mr-2" id="kaydetbtn">kaydet</button>
    </div>
}