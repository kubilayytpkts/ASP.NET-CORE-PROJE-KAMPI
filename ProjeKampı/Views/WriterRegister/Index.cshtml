@model Entity.Concrete.Writer

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/User_Layout.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="\lib\jquery\dist\jquery.js"></script>

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">KAYIT OL</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @using (Html.BeginForm("Index","WriterRegister",FormMethod.Post))
                {
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">İsim Soyisim</label>
                            @Html.TextBoxFor(x=>x.WriterName,new {@class="form-control"})
                            @Html.ValidationMessageFor(x=>x.WriterName,"",new {@class="text-danger"})
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">E-mail</label>
                            @Html.TextBoxFor(x=>x.WriterMail,new {@class="form-control"})
                            @Html.ValidationMessageFor(x=>x.WriterMail,"",new {@class="text-danger"})
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Şifre</label>
                           @Html.TextBoxFor(x=>x.WriterPassword,new {@class="form-control",type="password"})
                            @Html.ValidationMessageFor(x => x.WriterPassword,"",new {@class="text-danger"})
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4" id="btn11">Kayıt ol</button>
                    <p>
                        <a href="#" id="btn1">Site şartlarını kabul edıyorum</a>
                    </p>
                }
            </div>
        </div>
    </div>
   <script>
        $('#btn11').click(function () {
            Swal.fire({
                title: 'Aramıza Hoşgeldin.',
                width: 600,
                padding: '3em',
                color: '#716add',
                background: '#fff url(/images/trees.png)',
                backdrop: `
            rgba(0,0,123,0.4)
                            url("/web/images/nyan-cat-nyan.gif")
            left top
            no-repeat
          `
            })
        });
    </script>
</section>


